<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-6 text-center">
    プロフィール編集
  </h1>

  <%= form_for @user, html: { multipart: true, class: "space-y-4 w-full max-w-md mx-auto" } do |f| %>
    <%= f.hidden_field :image_cache %>
    
    <div class="form-control">
      <%= f.label :name, "ユーザー名（最大20文字）", class: "label" %>
      <%= f.text_field :name, class: "input input-bordered w-full", maxlength: 20 %>
    </div>
  

    <div class="form-control">
      <%= f.label :image, "サムネイル画像", class: "label" %>
      <% if @user.image.present? %>
        <div class="mb-2">
          <%= image_tag @user.image.url, alt: "現在の画像", class: "rounded-full w-24 h-24 object-cover" %>
        </div>
      <% end %>
      <%= f.file_field :image, class: "file-input file-input-bordered w-full" %>
    </div>

    <div>
      <%= f.submit "更新", class: "btn btn-primary w-full" %>
    </div>
  <% end %>
</div>
